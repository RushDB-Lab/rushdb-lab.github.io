---
import { getI18n, type Lang } from '../../i18n';
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
  lang: Lang;
}

const { headings, lang } = Astro.props;
const { t } = getI18n(lang);

const filteredHeadings = headings.filter(h => h.depth <= 3);
---

<nav class="toc" aria-label={t('blog.tableOfContents')}>
  <h3 class="toc-title">{t('blog.tableOfContents')}</h3>
  <div class="toc-indicator"></div>
  <ul class="toc-list">
    {filteredHeadings.map((heading) => (
      <li class={`toc-item toc-level-${heading.depth}`}>
        <a href={`#${heading.slug}`} class="toc-link" data-heading-slug={heading.slug}>
          <span class="toc-link-marker"></span>
          <span class="toc-link-text">{heading.text}</span>
        </a>
      </li>
    ))}
  </ul>
</nav>

<script>
  (() => {
    let cleanupToc: (() => void) | undefined;

    function initTOC() {
      if (cleanupToc) cleanupToc();

      const tocRoot = document.querySelector('.toc');
      if (!tocRoot) return;

      const tocList = tocRoot.querySelector('.toc-list');
      const indicator = tocRoot.querySelector('.toc-indicator') as HTMLElement | null;
      const tocLinks = Array.from(tocRoot.querySelectorAll<HTMLAnchorElement>('.toc-link'));

      if (!tocList || !indicator || tocLinks.length === 0) return;

      const linksBySlug = new Map<string, HTMLAnchorElement>();
      for (const link of tocLinks) {
        const slug = link.dataset.headingSlug;
        if (slug) linksBySlug.set(slug, link);
      }

      const headingElements = Array.from(linksBySlug.keys())
        .map((slug) => document.getElementById(slug))
        .filter(Boolean) as HTMLElement[];
      if (headingElements.length === 0) return;

      let activeLink: HTMLAnchorElement | null = null;
      let scrollRaf: number | null = null;

      function setActiveLink(nextLink: HTMLAnchorElement | null) {
        if (!nextLink || nextLink === activeLink) return;
        if (activeLink) activeLink.classList.remove('active');
        nextLink.classList.add('active');
        activeLink = nextLink;

        const linkRect = nextLink.getBoundingClientRect();
        const listRect = tocList.getBoundingClientRect();
        const top = linkRect.top - listRect.top;
        indicator.style.transform = `translateY(${top}px)`;
        indicator.style.height = `${linkRect.height}px`;
        indicator.style.opacity = '1';
      }

      function updateActiveHeading() {
        const scrollY = window.scrollY;
        const offset = 120;
        let currentHeading: HTMLElement | null = null;

        for (const heading of headingElements) {
          if (heading.offsetTop - offset <= scrollY) currentHeading = heading;
        }
        if (!currentHeading) return;

        const nextLink = linksBySlug.get(currentHeading.id) || null;
        setActiveLink(nextLink);
      }

      function onScroll() {
        if (scrollRaf !== null) return;
        scrollRaf = window.requestAnimationFrame(() => {
          updateActiveHeading();
          scrollRaf = null;
        });
      }

      function onTocClick(event: Event) {
        const target = event.target as HTMLElement | null;
        const link = target?.closest<HTMLAnchorElement>('.toc-link');
        if (!link) return;
        event.preventDefault();

        const slug = link.dataset.headingSlug;
        const heading = slug ? document.getElementById(slug) : null;
        if (!heading) return;

        window.scrollTo({
          top: heading.offsetTop - 100,
          behavior: 'smooth',
        });
      }

      tocRoot.addEventListener('click', onTocClick);
      window.addEventListener('scroll', onScroll, { passive: true });
      updateActiveHeading();

      cleanupToc = () => {
        tocRoot.removeEventListener('click', onTocClick);
        window.removeEventListener('scroll', onScroll);
        if (scrollRaf !== null) {
          window.cancelAnimationFrame(scrollRaf);
          scrollRaf = null;
        }
      };
    }

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initTOC, { once: true });
    } else {
      initTOC();
    }
    document.addEventListener('astro:page-load', initTOC);
    document.addEventListener('astro:before-swap', () => {
      if (cleanupToc) cleanupToc();
    });
  })();
</script>

<style>
  .toc {
    position: sticky;
    top: 100px;
    background: var(--surface);
    border: 1px solid var(--line);
    border-radius: 14px;
    padding: 1.25rem;
    backdrop-filter: blur(12px);
  }

  .toc-title {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid var(--line);
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    position: relative;
  }

  .toc-indicator {
    position: absolute;
    left: 0;
    width: 3px;
    height: 24px;
    background: linear-gradient(180deg, var(--c1), var(--c2));
    border-radius: 999px;
    opacity: 0;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1),
                height 0.3s cubic-bezier(0.16, 1, 0.3, 1),
                opacity 0.3s ease;
    box-shadow: 0 0 12px rgba(34, 211, 238, 0.4);
  }

  .toc-item {
    margin-bottom: 0.25rem;
  }

  .toc-level-2 {
    padding-left: 0;
  }

  .toc-level-3 {
    padding-left: 1rem;
  }

  .toc-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-2);
    text-decoration: none;
    font-size: 0.85rem;
    line-height: 1.4;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
  }

  .toc-link-marker {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: var(--line);
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .toc-link-text {
    flex: 1;
  }

  .toc-link:hover {
    color: var(--text);
    background: rgba(34, 211, 238, 0.08);
  }

  .toc-link:hover .toc-link-marker {
    background: var(--c1);
    transform: scale(1.3);
    box-shadow: 0 0 8px rgba(34, 211, 238, 0.5);
  }

  .toc-link.active {
    color: var(--c1);
    background: rgba(34, 211, 238, 0.1);
    font-weight: 600;
  }

  .toc-link.active .toc-link-marker {
    background: linear-gradient(135deg, var(--c1), var(--c2));
    transform: scale(1.4);
    box-shadow: 0 0 10px rgba(34, 211, 238, 0.6);
  }

  .toc-level-3 .toc-link {
    font-size: 0.8rem;
  }

  .toc-level-3 .toc-link-marker {
    width: 4px;
    height: 4px;
  }

  @media (prefers-reduced-motion: reduce) {
    .toc-indicator,
    .toc-link,
    .toc-link-marker {
      transition: none;
    }
  }
</style>
