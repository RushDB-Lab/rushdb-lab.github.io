---
import { getI18n, type Lang } from '../../i18n';
import type { MarkdownHeading } from 'astro';

interface Props {
  headings: MarkdownHeading[];
  lang: Lang;
}

const { headings, lang } = Astro.props;
const { t } = getI18n(lang);

const filteredHeadings = headings.filter(h => h.depth <= 3);
---

<nav class="toc" aria-label={t('blog.tableOfContents')}>
  <h3 class="toc-title">{t('blog.tableOfContents')}</h3>
  <div class="toc-indicator"></div>
  <ul class="toc-list">
    {filteredHeadings.map((heading) => (
      <li class={`toc-item toc-level-${heading.depth}`}>
        <a href={`#${heading.slug}`} class="toc-link" data-heading-slug={heading.slug}>
          <span class="toc-link-marker"></span>
          <span class="toc-link-text">{heading.text}</span>
        </a>
      </li>
    ))}
  </ul>
</nav>

<script>
  function initTOC() {
    const tocLinks = document.querySelectorAll('.toc-link');
    const indicator = document.querySelector('.toc-indicator') as HTMLElement;

    if (!tocLinks.length || !indicator) return;

    const headingElements = Array.from(tocLinks).map(link => {
      const slug = link.getAttribute('data-heading-slug');
      return document.getElementById(slug || '');
    }).filter(Boolean) as HTMLElement[];

    let activeLink: Element | null = null;

    function updateActiveHeading() {
      const scrollY = window.scrollY;
      const offset = 120;

      let currentHeading: HTMLElement | null = null;

      for (const heading of headingElements) {
        if (heading.offsetTop - offset <= scrollY) {
          currentHeading = heading;
        }
      }

      if (currentHeading) {
        const slug = currentHeading.id;
        const newActiveLink = document.querySelector(`.toc-link[data-heading-slug="${slug}"]`);

        if (newActiveLink && newActiveLink !== activeLink) {
          // Remove active class from previous
          if (activeLink) {
            activeLink.classList.remove('active');
          }

          // Add active class to new
          newActiveLink.classList.add('active');
          activeLink = newActiveLink;

          // Update indicator position
          const linkRect = newActiveLink.getBoundingClientRect();
          const tocRect = document.querySelector('.toc-list')?.getBoundingClientRect();

          if (tocRect) {
            const top = linkRect.top - tocRect.top;
            indicator.style.transform = `translateY(${top}px)`;
            indicator.style.height = `${linkRect.height}px`;
            indicator.style.opacity = '1';
          }
        }
      }
    }

    // Smooth scroll on click
    tocLinks.forEach(link => {
      link.addEventListener('click', (e) => {
        e.preventDefault();
        const slug = link.getAttribute('data-heading-slug');
        const target = document.getElementById(slug || '');
        if (target) {
          const offset = 100;
          const targetPosition = target.offsetTop - offset;
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      });
    });

    // Initial check and scroll listener
    updateActiveHeading();
    window.addEventListener('scroll', updateActiveHeading, { passive: true });
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', initTOC);
  // Re-initialize on Astro page transitions
  document.addEventListener('astro:page-load', initTOC);
</script>

<style>
  .toc {
    position: sticky;
    top: 100px;
    background: rgba(10, 14, 32, 0.62);
    border: 1px solid rgba(240, 246, 255, 0.12);
    border-radius: 14px;
    padding: 1.25rem;
    backdrop-filter: blur(12px);
  }

  .toc-title {
    font-size: 0.9rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    padding-bottom: 0.75rem;
    border-bottom: 1px solid rgba(240, 246, 255, 0.1);
  }

  .toc-list {
    list-style: none;
    padding: 0;
    margin: 0;
    position: relative;
  }

  .toc-indicator {
    position: absolute;
    left: 0;
    width: 3px;
    height: 24px;
    background: linear-gradient(180deg, var(--c1), var(--c2));
    border-radius: 999px;
    opacity: 0;
    transition: transform 0.3s cubic-bezier(0.16, 1, 0.3, 1),
                height 0.3s cubic-bezier(0.16, 1, 0.3, 1),
                opacity 0.3s ease;
    box-shadow: 0 0 12px rgba(34, 211, 238, 0.4);
  }

  .toc-item {
    margin-bottom: 0.25rem;
  }

  .toc-level-2 {
    padding-left: 0;
  }

  .toc-level-3 {
    padding-left: 1rem;
  }

  .toc-link {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--text-2);
    text-decoration: none;
    font-size: 0.85rem;
    line-height: 1.4;
    padding: 0.5rem 0.75rem;
    border-radius: 8px;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    position: relative;
  }

  .toc-link-marker {
    width: 6px;
    height: 6px;
    border-radius: 50%;
    background: rgba(240, 246, 255, 0.2);
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .toc-link-text {
    flex: 1;
  }

  .toc-link:hover {
    color: var(--text);
    background: rgba(34, 211, 238, 0.08);
  }

  .toc-link:hover .toc-link-marker {
    background: var(--c1);
    transform: scale(1.3);
    box-shadow: 0 0 8px rgba(34, 211, 238, 0.5);
  }

  .toc-link.active {
    color: var(--c1);
    background: rgba(34, 211, 238, 0.1);
    font-weight: 600;
  }

  .toc-link.active .toc-link-marker {
    background: linear-gradient(135deg, var(--c1), var(--c2));
    transform: scale(1.4);
    box-shadow: 0 0 10px rgba(34, 211, 238, 0.6);
  }

  .toc-level-3 .toc-link {
    font-size: 0.8rem;
  }

  .toc-level-3 .toc-link-marker {
    width: 4px;
    height: 4px;
  }

  @media (prefers-reduced-motion: reduce) {
    .toc-indicator,
    .toc-link,
    .toc-link-marker {
      transition: none;
    }
  }
</style>
