---
import { getI18n, type Lang } from '../../i18n';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
  lang: Lang;
}

const { post, lang } = Astro.props;
const { t } = getI18n(lang);

const [, ...slugParts] = post.id.split('/');
const slug = slugParts.join('/').replace(/\.md$/, '');

const formattedDate = post.data.pubDate.toLocaleDateString(
  lang === 'zh' ? 'zh-CN' : lang === 'ja' ? 'ja-JP' : 'en-US',
  { year: 'numeric', month: 'short', day: 'numeric' }
);

const categoryLabel = t(`blog.categories.${post.data.category}`);

// Calculate reading time (roughly 200 words per minute for CJK, 250 for English)
const content = post.body || '';
const wordCount = content.length;
const wordsPerMinute = lang === 'en' ? 250 : 200;
const readingTime = Math.max(1, Math.ceil(wordCount / wordsPerMinute));
const readingTimeLabel = lang === 'zh' ? `${readingTime} 分钟` : lang === 'ja' ? `${readingTime} 分` : `${readingTime} min`;

// Check for hero image
const heroImage = post.data.heroImage;
---

<article class={`post-card ${heroImage ? 'has-hero' : ''}`}>
  <a href={`/${lang}/blog/${slug}/`} class="post-card-link">
    {heroImage && (
      <div class="post-card-image">
        <img src={heroImage} alt={post.data.title} loading="lazy" />
        <div class="post-card-image-overlay"></div>
      </div>
    )}

    <div class="post-card-content">
      <div class="post-card-meta">
        <span class="post-card-category">{categoryLabel}</span>
        <span class="post-card-divider">·</span>
        <span class="post-card-date">{formattedDate}</span>
        <span class="post-card-divider">·</span>
        <span class="post-card-reading-time">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="12" cy="12" r="10"></circle>
            <polyline points="12 6 12 12 16 14"></polyline>
          </svg>
          {readingTimeLabel}
        </span>
      </div>

      <h2 class="post-card-title">{post.data.title}</h2>

      <p class="post-card-description">{post.data.description}</p>

      {post.data.tags.length > 0 && (
        <div class="post-card-tags">
          {post.data.tags.slice(0, 3).map((tag: string) => (
            <span class="post-card-tag">#{tag}</span>
          ))}
        </div>
      )}

      <span class="post-card-read-more">
        {t('blog.readMore')}
        <svg class="read-more-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path d="M5 12h14M12 5l7 7-7 7"/>
        </svg>
      </span>
    </div>
  </a>
</article>

<style>
  .post-card {
    background: rgba(10, 14, 32, 0.62);
    border: 1px solid rgba(240, 246, 255, 0.12);
    border-radius: 18px;
    transition: all 0.4s cubic-bezier(0.16, 1, 0.3, 1);
    overflow: hidden;
    position: relative;
  }

  .post-card::before {
    content: "";
    position: absolute;
    inset: -1px;
    background: linear-gradient(
      135deg,
      rgba(34, 211, 238, 0.4),
      rgba(168, 85, 247, 0.3),
      rgba(96, 165, 250, 0.3)
    );
    border-radius: inherit;
    z-index: -1;
    opacity: 0;
    transition: opacity 0.4s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .post-card:hover {
    transform: translateY(-6px);
    border-color: rgba(34, 211, 238, 0.3);
    box-shadow:
      0 4px 6px rgba(0, 0, 0, 0.1),
      0 10px 20px rgba(0, 0, 0, 0.15),
      0 20px 50px rgba(34, 211, 238, 0.1);
  }

  .post-card:hover::before {
    opacity: 1;
  }

  .post-card-link {
    display: block;
    text-decoration: none;
  }

  /* Hero Image Styles */
  .post-card-image {
    position: relative;
    height: 180px;
    overflow: hidden;
  }

  .post-card-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .post-card:hover .post-card-image img {
    transform: scale(1.08);
  }

  .post-card-image-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      to bottom,
      transparent 0%,
      rgba(10, 14, 32, 0.4) 60%,
      rgba(10, 14, 32, 0.9) 100%
    );
  }

  .post-card-content {
    padding: 1.5rem;
  }

  .has-hero .post-card-content {
    padding-top: 1rem;
  }

  .post-card-meta {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
    flex-wrap: wrap;
  }

  .post-card-category {
    color: var(--c1);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-card-divider {
    color: var(--text-3);
  }

  .post-card-date {
    color: var(--text-3);
  }

  .post-card-reading-time {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    color: var(--text-3);
  }

  .post-card-reading-time svg {
    opacity: 0.7;
  }

  .post-card-title {
    font-size: 1.3rem;
    font-weight: 700;
    color: var(--text);
    margin-bottom: 0.75rem;
    line-height: 1.3;
    transition: color 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .post-card:hover .post-card-title {
    color: var(--c1);
  }

  .post-card-description {
    color: var(--text-2);
    font-size: 0.95rem;
    line-height: 1.6;
    margin-bottom: 1rem;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .post-card-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1rem;
  }

  .post-card-tag {
    background: rgba(168, 85, 247, 0.1);
    color: var(--c2);
    font-size: 0.8rem;
    padding: 0.25rem 0.75rem;
    border-radius: 999px;
    border: 1px solid rgba(168, 85, 247, 0.2);
    transition: all 0.3s ease;
  }

  .post-card:hover .post-card-tag {
    background: rgba(168, 85, 247, 0.15);
    border-color: rgba(168, 85, 247, 0.3);
  }

  .post-card-read-more {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    color: var(--c1);
    font-size: 0.9rem;
    font-weight: 600;
  }

  .read-more-arrow {
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .post-card:hover .read-more-arrow {
    transform: translateX(4px);
  }
</style>
